{{#if poster_path}}
<img class='card__image' src='https://image.tmdb.org/t/p/w500{{poster_path}}' alt='{{original_title}}'
    data-type='{{media_type}}' data-src='{{id}}' />
{{else}}
<img class='card__image' src='https://kinomaiak.ru/wp-content/uploads/2018/02/noposter.png' data-src='{{id}}' />
{{/if}}
<div class='card__info'>
<h2 class='card__name'>{{title}}</h2>
<ul class='card__parameters'>
    <li class='card__parameter card__parameter--votes'>
        <p class='parameter__label'>Vote / Votes</p>
        <p class='parameter__value parameter__value--avg'>{{vote_average}}</p>
        <p class='parameter__value'> / </p>
        <p class='parameter__value parameter__value--cnt'>{{vote_count}}</p>
    </li>
    <li class='card__parameter'>
        <p class='parameter__label'>Popularity</p>
        <p class='parameter__value'>{{popularity}}</p>
    </li>
    <li class='card__parameter card__parameter--title'>
        <p class='parameter__label'>Original Title</p>
        <p class='parameter__value'>{{original_title}}</p>
    </li>
    <li class='card__parameter card__parameter--genres'>
        <p class='parameter__label'>Genre</p>
        <p class='parameter__value'>
        {{#each genres}}
        <span>{{this.name}}</span><span class='comma'>,</span>
        {{/each}}
        </p>
    </li>
</ul>
<details class='mobile-about'>
    <summary class='mobile-about-caption'>About</summary>
    {{overview}}
</details>
<p class='card__about-caption'>About</p>
<p class='card__about'>{{overview}}</p>

<div class='modal-form__buttons'>
    <button class='btn modal-form__btn' type='button'>
    add to watched
    </button>
    <button class='btn modal-form__btn' type='button'>
    add to queue
    </button>
</div>
</div>